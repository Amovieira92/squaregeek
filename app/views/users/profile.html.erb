<div class="container mt-4">
  <div class="panel">
    <div class="box-perfil">
      <div class="form-group row">
        <div class="col-3">
          <label class="col-sm-2 col-form-label col-form-label-sm">Nome</label>
          <div class="col-sm-12">
            <input type="text" class="form-control form-control-sm" placeholder="col-form-label-sm" value="<%=current_user.name%>" readonly>
          </div>
        </div>
        <div class="col-3">
          <label  class="col-sm-2 col-form-label col-form-label-sm">Email</label>
          <div class="col-sm-12">
            <input type="text" class="form-control form-control-sm" value="<%=current_user.email%>" readonly>
          </div>
        </div>
        <div class="col-2">
          <label class="col-sm-2 col-form-label col-form-label-sm">Telefone</label>
          <div class="col-sm-12">
            <input type="text" class="form-control form-control-sm" value="<%=current_user.phone%>" readonly>
          </div>
        </div>
        <div class="col-2">
          <label class="col-sm-2 col-form-label col-form-label-sm">Cidade</label>
          <div class="col-sm-12">
            <input type="text" class="form-control form-control-sm" value="<%=current_user.city%>" readonly>
          </div>
        </div>
        <div class="col-2">
          <label class="col-sm-2 col-form-label col-form-label-sm">Estado</label>
          <div class="col-sm-12">
            <input type="text" class="form-control form-control-sm" value="<%=current_user.state%>" readonly>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%=link_to 'Editar', edit_user_registration_path, class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>
