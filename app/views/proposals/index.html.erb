<h1>Propostas recebidas</h1>
<% @received_proposals.each do |p| %>
  <ul>
    <li><small><%= p.id %></small></li>
    <li><h1><%= link_to p.date, p %></h1></li>
    <li>Meu produto: <h2><%= p.desired.title %></h2></li>
    <% if p.offered %>
      <li>Produto oferecido: <h2><%= p.offered.title %></h2></li>
    <% end %>
    <li>Status: <h2><%= p.status %></h2></li>
  </ul>
<% end %>

<h1>Propostas enviadas</h1>
<% @sent_proposals.each do |p| %>
  <ul>
    <li><small><%= p.id %></small></li>
    <li><h1><%= link_to p.date, p %></h1></li>
    <li>Produto desejado: <h2><%= p.desired.title %></h2></li>
    <% if p.offered %>
      <li>Produto oferecido: <h2><%= p.offered.title %></h2></li>
    <% else %>
      <li><h2>Pre√ßo: <%= p.desired.price %></h2></li>
