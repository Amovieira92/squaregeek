<h1>Propostas recebidas</h1>
<% @received_proposals.each do |proposal| %>
  <ul>
    <li><small><%= proposal.id %></small></li>
    <li><h1><%= link_to proposal.date, proposal %></h1></li>
    <li>Meu produto: <h2><%= proposal.desired.title %></h2></li>
    <% if proposal.offered %>
      <li>Produto oferecido: <h2><%= proposal.offered.title %></h2></li>
    <% end %>
    <li>Status: <h2><%= proposal.status %></h2></li>
  </ul>
<% end %>

<h1>Propostas enviadas</h1>
<% @sent_proposals.each do |proposal| %>
  <ul>
